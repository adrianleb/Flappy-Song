@import "_normalize"
body
  background-color darken(white, 20%)
  


*, *:before, *:after {

	box-sizing: border-box
	position relative
}



html
	font-size 62.5%

body
	font-size 1.6rem




.screen {
	opacity 0
	pointer-events none
	width 100%
	height 100vh
	// background-color red
	overflow hidden
	display block
	position absolute
	top 0
	left 0
	bottom 0
	right 0
}

.visible-screen {
	opacity 1
	pointer-events auto
	
}
.centered-content
	text-align center
	
	max-width 48rem
	margin 0 auto
	height 30rem
	background-color blue